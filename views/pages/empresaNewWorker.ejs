<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/empresaNewWorker.css">
  <link rel="stylesheet" href="/css/header-footer.css">
</head>
<body>
  <%- include('../partials/header') %>
  
  <main>
    <h1><%= title %></h1>
    <% if (error) { %>
      <p class="error"><%= error %></p>
    <% } %>
    <form action="/empresa/workers" method="POST">
      <div class="form-group">
        <label for="firstName">Primer Nombre:</label>
        <input type="text" id="firstName" name="firstName" required>
      </div>
      <div class="form-group">
        <label for="secondName">Segundo Nombre:</label>
        <input type="text" id="secondName" name="secondName">
      </div>
      <div class="form-group">
        <label for="lastName">Apellido Paterno:</label>
        <input type="text" id="lastName" name="lastName" required>
      </div>
      <div class="form-group">
        <label for="motherLastName">Apellido Materno:</label>
        <input type="text" id="motherLastName" name="motherLastName" required>
      </div>
      <div class="form-group">
        <label for="position">Cargo:</label>
        <select name="position" id="position" required>
          <% if (cargos && cargos.length > 0) { %>
            <% cargos.forEach(function(cargo) { %>
              <option value="<%= cargo.name %>"><%= cargo.name %></option>
            <% }) %>
          <% } else { %>
            <option value="">No hay cargos disponibles</option>
          <% } %>
        </select>
      </div>
      <div class="form-group">
        <label for="location">Sucursal:</label>
        <select name="location" id="location" required>
          <% if (sucursales && sucursales.length > 0) { %>
            <% sucursales.forEach(function(sucursal) { %>
              <option value="<%= sucursal.name %>"><%= sucursal.name %></option>
            <% }) %>
          <% } else { %>
            <option value="">No hay sucursales disponibles</option>
          <% } %>
        </select>
      </div>
      <button type="submit">Registrar Trabajador</button>
    </form>
  </main>
  
  <%- include('../partials/footer') %>
</body>
</html>
