<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/companies.css">
  <link rel="stylesheet" href="/css/header-footer.css">
</head>
<body>
  <%- include('../partials/header') %>

  <main>
    <h1><%= title %></h1>
    <% if (error) { %>
      <p class="error"><%= error %></p>
    <% } %>

    <% if (empresas && empresas.length > 0) { %>
      <ul>
        <% empresas.forEach(function(empresa) { %>
          <li>
            <strong><%= empresa.name %></strong> - <%= empresa.email %>
            <a href="/admin/companies/<%= empresa.id %>/edit" class="btn-edit">Editar</a>
            <form action="/admin/companies/<%= empresa.id %>/delete" method="POST" style="display: inline;">
              <button type="submit" class="btn-delete" onclick="return confirm('¿Estás seguro de eliminar esta empresa?');">
                Eliminar
              </button>
            </form>
          </li>
        <% }); %>
      </ul>
    <% } else { %>
      <p>No se encontraron empresas.</p>
    <% } %>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
